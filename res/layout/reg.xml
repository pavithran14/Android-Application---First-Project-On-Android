<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#004d00" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="254dp"
        android:layout_height="197dp"
        android:layout_x="27dp"
        android:layout_y="-2dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="206dp"
        android:text="User Name : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/usn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_x="131dp"
        android:layout_y="197dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="71dp"
        android:layout_y="248dp"
        android:text="Email : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="238dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="290dp"
        android:text="Ph Number : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="337dp"
        android:text="Password : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="327dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_x="130dp"
        android:layout_y="280dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/cp"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="370dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="379dp"
        android:text="Conf.password : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="54dp"
        android:layout_y="430dp"
        android:text="Address : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/addr"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_x="136dp"
        android:layout_y="422dp"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/b1"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_x="99dp"
        android:layout_y="480dp"
        android:text="Finish!" />

</AbsoluteLayout>
</ScrollView>